<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="navigation_drawer_styles" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">#eee</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="medium_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="medium_secondary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="medium_ternary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="large_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="very_small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="navigation_text_normal" parent="android:TextAppearance.Large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="navigation_text_selected" parent="android:TextAppearance.Large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>