<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"> <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="primaryColor">#333</item>
        <item name="primaryColorShaded">#222</item>
    </style>

    <style name="navigation_drawer_styles" parent="android:Widget.Holo.Light.ListView">
        <item name="android:background">#eee</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="medium_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="medium_secondary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="medium_ternary_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="large_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="very_small_text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="navigation_text_normal" parent="android:TextAppearance.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="navigation_text_selected" parent="android:TextAppearance.Large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#C0000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_button_primary" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/primaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="dialog_button_secondary" parent="dialog_button_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="dialog_button_stacked_primary" parent="dialog_button_primary">
        <item name="android:gravity">right</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="dialog_button_stacked_secondary" parent="dialog_button_stacked_primary">
        <item name="android:textColor">#90000000</item>
    </style>

</resources>